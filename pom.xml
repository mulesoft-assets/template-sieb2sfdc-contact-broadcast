<?xml version="1.0" encoding="utf-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.mule.templates</groupId>
		<artifactId>templates-tooling-parent-pom</artifactId>
		<version>1.0.2</version>
	</parent>

	<artifactId>template-sieb2sfdc-contact-broadcast</artifactId>
	<packaging>mule</packaging>
	<version>1.1.0-SNAPSHOT</version>
	<name>template-sieb2sfdc-contact-broadcast Anypoint Template Project</name>

	<properties>
		<siebel.version>2.0.0</siebel.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.mule.tools</groupId>
				<artifactId>maven-mule-plugin</artifactId>
				<configuration>
					<copyToAppsDirectory>true</copyToAppsDirectory>
					<inclusions>
						<inclusion>
							<groupId>org.mule.modules</groupId>
							<artifactId>mule-module-sfdc</artifactId>
						</inclusion>
					<inclusion>
                            <groupId>org.mule.modules</groupId>
                            <artifactId>mule-module-siebel</artifactId>
                        </inclusion>
                    </inclusions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>		
		<dependency>
			<groupId>org.mule.modules</groupId>
			<artifactId>mule-module-sfdc</artifactId>
			<version>${sfdc.version}</version>
		</dependency>
		<dependency>
            <groupId>org.mule.modules</groupId>
            <artifactId>mule-module-siebel</artifactId>
            <version>${siebel.version}</version>
        </dependency>
        <dependency>
			<groupId>siebel</groupId>
			<artifactId>siebel</artifactId>
			<version>8.1.1.11</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>siebel</groupId>
			<artifactId>siebel-ji-enu</artifactId>
			<version>8.1.1.11</version>
			<scope>test</scope>
		</dependency>
    </dependencies>

	<repositories>
		<repository>
			<id>mulesoft-releases</id>
			<name>MuleSoft Releases Repository</name>
			<url>https://repository.mulesoft.org/nexus/content/repositories/releases/</url>
			<layout>default</layout>
		</repository>
		<repository>
			<id>mulesoft-snapshots</id>
			<name>MuleSoft Snapshots Repository</name>
			<url>https://repository.mulesoft.org/nexus/content/repositories/snapshots/</url>
			<layout>default</layout>
		</repository>
		<repository>
			<id>mule-ee-thirdparty</id>
			<name>MuleSoft Thirdparty Repository</name>
			<url>https://repository.mulesoft.org/nexus/content/repositories/thirdparty/</url>
			<layout>default</layout>
		</repository>
	</repositories>

	<scm>
		<connection>scm:git:https://github.com/mulesoft/template-sieb2sfdc-contact-broadcast.git</connection>
		<developerConnection>scm:git:https://github.com/mulesoft/template-sieb2sfdc-contact-broadcast.git</developerConnection>
		<url>http://github.com/mulesoft/template-sieb2sfdc-contact-broadcast</url>
	  <tag>HEAD</tag>
  </scm>
</project>
